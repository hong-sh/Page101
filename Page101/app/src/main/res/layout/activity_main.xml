<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_bgpoint" />

        <TextView
            android:id="@+id/textView_point"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view_div"
            android:layout_gravity="right"
            android:layout_toLeftOf="@+id/imageView_point"
            android:gravity="right"
            android:text="123456"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView_point"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_above="@+id/view_div"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/icon_main_pointt" />

        <View
            android:id="@+id/view_div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/icon_main_line" />


        <Button
            android:id="@+id/buttonPoint"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/view_div"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/view_div2"
            android:background="@drawable/icon_main_point" />

        <View
            android:id="@+id/view_div2"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_div"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/buttonMypage"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@+id/view_div"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/view_div2"
            android:background="@drawable/icon_main_mypage" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom"
        android:layout_below="@+id/layout_main"
        android:src="@drawable/img_intro2" />

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#e2e2e2"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/button_home"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_menu_c_home" />

        <ImageView
            android:id="@+id/button_reservation"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_menu_reservation" />

        <ImageView
            android:id="@+id/button_seat"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_menu_seat" />

        <ImageView
            android:id="@+id/button_event"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_menu_event" />
    </LinearLayout>

</RelativeLayout>
