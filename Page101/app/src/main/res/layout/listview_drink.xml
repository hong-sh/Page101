<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#FFFFFF"
        android:id="@+id/layout_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="10dp">

        <TextView
            android:textColor="#515151"
            android:id="@+id/textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="아메리카노"
            android:textSize="20dp"/>


        <LinearLayout
            android:id="@+id/layout_ea"
            android:layout_width="140dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView_name"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:textColor="#515151"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수량" />

            <Button
                android:id="@+id/button_minus_ea"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/button_round_gray"

                android:text="-" />

            <TextView
                android:textColor="#515151"
                android:textSize="15dp"
                android:id="@+id/textView_ea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/button_plus_ea"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/button_round_gray"
                android:text="+" />

        </LinearLayout>


        <LinearLayout
            android:layout_alignBottom="@+id/textView_name"
            android:id="@+id/layout_shot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#515151"
                android:text="샷 추가" />

            <CheckBox
                android:id="@+id/checkbox_shot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/layout_ea">

            <TextView
                android:textColor="#898989"
                android:id="@+id/textView_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginRight="3dp"
                android:text="3,000"/>

            <TextView
                android:textColor="#898989"
                android:id="@+id/textView_won"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginRight="5dp"
                android:text="원"/>

            <Button
                android:id="@+id/button_cart"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:text="담  기"
                android:background="@drawable/button_orange"/>

        </LinearLayout>









    </RelativeLayout>


</RelativeLayout>
