<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:paddingTop="10dp"
        android:paddingLeft="16dp"
        android:paddingBottom="10dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/textView_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="전음료 TAKE-OUT 20% 할인"
            android:textColor="#000000"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_below="@+id/textView_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_event_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.06.02"
                android:textColor="#3f3f3f"
                android:textSize="13dp" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#3f3f3f"
                android:textSize="13dp"
                android:text="~"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView_event_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.08.11"
                android:textColor="#3f3f3f"
                android:textSize="13dp" />

        </LinearLayout>

        <Button
            android:focusable="false"
            android:id="@+id/button_state"
            android:clickable="false"
            android:textSize="13dp"
            android:textColor="#FFFFFF"
            android:text="완 료"
            android:background="@drawable/button_round_darkgray"
            android:layout_alignParentRight="true"
            android:layout_width="55dp"
            android:layout_height="55dp" />


    </RelativeLayout>


</RelativeLayout>
